# get info
name = input("Enter your name: ")
surname = input("Enter your surname: ")
age = int(input("Enter your age: "))

# Print
print("Your name is", name, "your surname is", surname, "and you are", age, "years old.")

# f-string
print(f"Your name is {name}, your surname is {surname}, and you are {age} years old.")

# format
print("Your name is {}, your surname is {}, and you are {} years old.".format(name, surname, age))
