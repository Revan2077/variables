# Input
num1 = float(input("Enter the first decimal number: "))
num2 = float(input("Enter the second decimal number: "))
num3 = float(input("Enter the third decimal number: "))

# Convert
int1 = int(num1)
int2 = int(num2)
int3 = int(num3)

# Print with sep
print(int1, int2, int3, sep='*')

# Print with f-string
print(f"{int1}*{int2}*{int3}")

# Print with format method
print("{}*{}*{}".format(int1, int2, int3))
